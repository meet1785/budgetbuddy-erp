# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Development Mode
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=budgetbuddy_erp
USE_LOCAL_MONGO=false
MONGODB_LOCAL_URI=mongodb://localhost:27017/budgetbuddy_erp

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Server Configuration
PORT=3000

# Frontend Environment Variables
VITE_API_URL=http://localhost:3000/api